{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://exhibition-pal.example.com/schemas/exhibition-page.json",
  "title": "Exhibition page context",
  "type": "object",
  "required": [
    "id",
    "slug",
    "title",
    "period",
    "venue",
    "summary",
    "officialUrl",
    "relatedUrls",
    "heroImage",
    "artworkList",
    "detailUrl"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "period": {
      "type": "object",
      "required": [
        "start",
        "end",
        "display"
      ],
      "additionalProperties": false,
      "properties": {
        "start": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^$|^\\d{4}-\\d{2}-\\d{2}$"
        },
        "end": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^$|^\\d{4}-\\d{2}-\\d{2}$"
        },
        "display": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "venue": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "background": {
      "type": [
        "string",
        "null"
      ]
    },
    "highlights": {
      "type": [
        "string",
        "null"
      ]
    },
    "highlightsBlocks": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "officialUrl": {
      "type": "string",
      "pattern": "^https://"
    },
    "relatedUrls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "url",
          "label"
        ],
        "additionalProperties": false,
        "properties": {
          "url": {
            "type": "string",
            "pattern": "^https://"
          },
          "label": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "heroImage": {
      "type": "object",
      "required": [
        "src",
        "alt",
        "focalPoint"
      ],
      "additionalProperties": false,
      "properties": {
        "src": {
          "type": "string",
          "pattern": "^https://"
        },
        "alt": {
          "type": "string",
          "minLength": 1
        },
        "focalPoint": {
          "type": "object",
          "required": [
            "x",
            "y"
          ],
          "additionalProperties": false,
          "properties": {
            "x": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "y": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    },
    "artworkList": {
      "type": "array",
      "items": {
        "$ref": "https://exhibition-pal.example.com/schemas/artworks.json#/definitions/artwork"
      }
    },
    "featuredArtworkIds": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "detailUrl": {
      "type": "string",
      "pattern": "^/exhibitions/[a-z0-9-]+/$"
    },
    "slider": {
      "type": ["object", "null"],
      "properties": {
        "autoplay": {
          "type": "boolean"
        },
        "loop": {
          "type": "boolean"
        },
        "prefersReducedMotion": {
          "type": "boolean"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["artworkId", "image", "caption"],
            "additionalProperties": false,
            "properties": {
              "artworkId": {
                "type": "string"
              },
              "image": {
                "type": "object",
                "required": ["src", "alt"],
                "properties": {
                  "src": { "type": "string", "pattern": "^https://" },
                  "alt": { "type": "string", "minLength": 1 }
                },
                "additionalProperties": false
              },
              "caption": {
                "type": "string",
                "minLength": 1
              },
              "audioUrl": {
                "type": ["string", "null"],
                "pattern": "^https://"
              }
            }
          }
        },
        "controls": {
          "type": "object",
          "required": ["previousLabel", "nextLabel", "pauseLabel", "playLabel"],
          "additionalProperties": false,
          "properties": {
            "previousLabel": { "type": "string" },
            "nextLabel": { "type": "string" },
            "pauseLabel": { "type": "string" },
            "playLabel": { "type": "string" }
          }
        }
      }
    },
    "navigation": {
      "type": ["object", "null"],
      "properties": {
        "breadcrumbs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "url"],
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string" }
            }
          }
        },
        "related": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cta": {
          "type": "object",
          "required": ["label", "url"],
          "additionalProperties": false,
          "properties": {
            "label": {
              "type": "object",
              "required": ["ja"],
              "properties": {
                "ja": { "type": "string" },
                "en": { "type": ["string", "null"] }
              },
              "additionalProperties": false
            },
            "url": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
