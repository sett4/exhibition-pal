{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://exhibition-pal.example.com/schemas/artworks.json",
  "title": "Artworks dataset",
  "type": "array",
  "items": {
    "$ref": "#/definitions/artwork"
  },
  "definitions": {
    "artwork": {
      "type": "object",
      "required": [
        "artworkId",
        "exhibitionId",
        "title",
        "exhibitionTitle",
        "lastSyncedAt"
      ],
      "additionalProperties": false,
      "properties": {
        "artworkId": {
          "type": "string",
          "minLength": 1
        },
        "exhibitionId": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "exhibitionTitle": {
          "type": "string",
          "minLength": 1
        },
        "displayId": {
          "type": [
            "string",
            "null"
          ],
          "maxLength": 50
        },
        "artistName": {
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        },
        "introMediaUrl": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^https://"
        },
        "referenceUrl": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^https://"
        },
        "audioUrl": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^https://"
        },
        "articleUrl": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^https://"
        },
        "image": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string",
              "pattern": "^https://"
            },
            {
              "type": "object",
              "required": ["src", "alt", "sources"],
              "additionalProperties": false,
              "properties": {
                "src": {
                  "type": "string",
                  "pattern": "^https://"
                },
                "alt": {
                  "type": "string",
                  "minLength": 1
                },
                "sources": {
                  "type": "array",
                  "minItems": 2,
                  "items": {
                    "type": "object",
                    "required": ["srcset", "type"],
                    "additionalProperties": false,
                    "properties": {
                      "srcset": { "type": "string", "minLength": 1 },
                      "type": { "type": "string", "minLength": 1 }
                    }
                  }
                }
              }
            }
          ]
        },
        "inputDate": {
          "type": [
            "string",
            "null"
          ],
          "pattern": "^$|^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
        },
        "lastSyncedAt": {
          "type": "string",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(?:\\.[0-9]+)?Z$"
        },
        "mediaType": {
          "type": ["string", "null"],
          "minLength": 1
        },
        "transcript": {
          "type": "string",
          "minLength": 1
        },
        "referenceLinks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "url"],
            "additionalProperties": false,
            "properties": {
              "label": { "type": "string", "minLength": 1 },
              "url": { "type": "string", "pattern": "^https://" }
            }
          }
        }
      }
    }
  },
  "uniqueItems": true
}
