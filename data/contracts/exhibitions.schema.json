{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://exhibition-pal.example.com/schemas/exhibitions.json",
  "title": "Exhibitions dataset",
  "type": "object",
  "required": [
    "list",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "list": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/exhibition"
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "fetchedAt",
        "sourceSpreadsheet",
        "warnings",
        "artworkSortKey",
        "updatedAt"
      ],
      "additionalProperties": false,
      "properties": {
        "fetchedAt": {
          "type": "string",
          "format": "date-time"
        },
        "sourceSpreadsheet": {
          "type": "string",
          "minLength": 1
        },
        "warnings": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/warning"
          }
        },
        "internal": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "inventoryUrl": {
                "type": [
                  "string",
                  "null"
                ],
                "pattern": "^https://"
              },
              "detailDocUrl": {
                "type": [
                  "string",
                  "null"
                ],
                "pattern": "^https://"
              },
              "noteUrl": {
                "type": [
                  "string",
                  "null"
                ],
                "pattern": "^https://"
              }
            }
          }
        },
        "artworkSortKey": {
          "type": "string",
          "enum": [
            "artworkId"
          ]
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "definitions": {
    "exhibition": {
      "type": "object",
      "required": [
        "id",
        "slug",
        "title",
        "period",
        "venue",
        "summary",
        "officialUrl",
        "relatedUrls",
        "heroImage",
        "artworkList",
        "detailUrl"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "slug": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "period": {
          "type": "object",
          "required": [
            "start",
            "end",
            "display"
          ],
          "additionalProperties": false,
          "properties": {
            "start": {
              "type": [
                "string",
                "null"
              ],
              "pattern": "^$|^\\d{4}-\\d{2}-\\d{2}$"
            },
            "end": {
              "type": [
                "string",
                "null"
              ],
              "pattern": "^$|^\\d{4}-\\d{2}-\\d{2}$"
            },
            "display": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "venue": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "background": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "highlights": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "highlightsBlocks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "officialUrl": {
          "type": "string",
          "pattern": "^https://"
        },
        "relatedUrls": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "url",
              "label"
            ],
            "additionalProperties": false,
            "properties": {
              "url": {
                "type": "string",
                "pattern": "^https://"
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "heroImage": {
          "type": "object",
          "required": [
            "src",
            "alt",
            "focalPoint"
          ],
          "additionalProperties": false,
          "properties": {
            "src": {
              "type": "string",
              "pattern": "^https://"
            },
            "alt": {
              "type": "string",
              "minLength": 1
            },
            "focalPoint": {
              "type": "object",
              "required": [
                "x",
                "y"
              ],
              "additionalProperties": false,
              "properties": {
                "x": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "y": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          }
        },
        "artworkList": {
          "type": "array",
          "items": {
            "$ref": "https://exhibition-pal.example.com/schemas/artworks.json#/definitions/artwork"
          }
        },
        "featuredArtworkIds": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 0,
          "maxItems": 6
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "detailUrl": {
          "type": "string",
          "pattern": "^/exhibitions/[a-z0-9-]+/$"
        }
      }
    },
    "warning": {
      "type": "object",
      "required": [
        "id",
        "type",
        "message"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}
