{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://exhibition-pal.example.com/schemas/exhibition-detail.json",
  "title": "Exhibition detail page payload",
  "type": "object",
  "required": ["meta", "exhibition", "slider", "navigation"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "description", "ogImage"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "ogImage": {
          "type": "string",
          "pattern": "^https://"
        }
      }
    },
    "exhibition": {
      "type": "object",
      "required": [
        "id",
        "title",
        "period",
        "venue",
        "summary",
        "background",
        "highlights",
        "heroImage",
        "sections"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "period": {
          "type": "object",
          "required": ["display"],
          "additionalProperties": false,
          "properties": {
            "start": {
              "type": ["string", "null"],
              "format": "date"
            },
            "end": {
              "type": ["string", "null"],
              "format": "date"
            },
            "display": {
              "type": ["string", "null"]
            }
          }
        },
        "venue": {
          "type": "string",
          "minLength": 1
        },
        "summary": {
          "type": "string",
          "minLength": 1
        },
        "background": {
          "type": ["string", "null"]
        },
        "highlights": {
          "type": ["string", "null"]
        },
        "heroImage": {
          "type": "object",
          "required": ["src", "alt", "focalPoint"],
          "additionalProperties": false,
          "properties": {
            "src": {
              "type": "string",
              "pattern": "^https://"
            },
            "alt": {
              "type": "string",
              "minLength": 1
            },
            "focalPoint": {
              "type": "object",
              "required": ["x", "y"],
              "additionalProperties": false,
              "properties": {
                "x": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "y": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              }
            }
          }
        },
        "sections": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["type", "content"],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": ["introduction", "timeline", "gallery", "cta"]
              },
              "content": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "slider": {
      "type": "object",
      "required": ["items", "autoplay", "loop", "controls"],
      "additionalProperties": false,
      "properties": {
        "autoplay": {
          "type": "boolean",
          "const": true
        },
        "loop": {
          "type": "boolean",
          "const": true
        },
        "prefersReducedMotion": {
          "type": "boolean"
        },
        "items": {
          "type": "array",
          "minItems": 3,
          "maxItems": 6,
          "items": {
            "type": "object",
            "required": ["artworkId", "image", "caption"],
            "additionalProperties": false,
            "properties": {
              "artworkId": {
                "type": "string",
                "minLength": 1
              },
              "image": {
                "type": "object",
                "required": ["src", "alt"],
                "additionalProperties": false,
                "properties": {
                  "src": {
                    "type": "string",
                    "pattern": "^https://"
                  },
                  "alt": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              },
              "caption": {
                "type": "string",
                "minLength": 1
              },
              "audioUrl": {
                "type": ["string", "null"],
                "pattern": "^https://"
              }
            }
          }
        },
        "controls": {
          "type": "object",
          "required": ["previousLabel", "nextLabel", "pauseLabel", "playLabel"],
          "additionalProperties": false,
          "properties": {
            "previousLabel": {
              "type": "string",
              "minLength": 1
            },
            "nextLabel": {
              "type": "string",
              "minLength": 1
            },
            "pauseLabel": {
              "type": "string",
              "minLength": 1
            },
            "playLabel": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "navigation": {
      "type": "object",
      "required": ["breadcrumbs", "related"],
      "additionalProperties": false,
      "properties": {
        "breadcrumbs": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["label", "url"],
            "additionalProperties": false,
            "properties": {
              "label": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "pattern": "^/"
              }
            }
          }
        },
        "related": {
          "type": "array",
          "maxItems": 3,
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          }
        }
      }
    }
  }
}
