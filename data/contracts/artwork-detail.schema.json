{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://exhibition-pal.example.com/schemas/artwork-detail.json",
  "title": "Artwork detail page payload",
  "type": "object",
  "required": ["meta", "artwork", "navigation", "adjacent"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "description", "ogImage"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "ogImage": {
          "type": "string",
          "pattern": "^https://"
        }
      }
    },
    "artwork": {
      "type": "object",
      "required": [
        "artworkId",
        "title",
        "artistName",
        "description",
        "image",
        "mediaType",
        "transcript"
      ],
      "additionalProperties": false,
      "properties": {
        "artworkId": {
          "type": "string",
          "minLength": 1
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "artistName": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": ["string", "null"]
        },
        "image": {
          "type": "object",
          "required": ["src", "alt", "sources"],
          "additionalProperties": false,
          "properties": {
            "src": {
              "type": "string",
              "pattern": "^https://"
            },
            "alt": {
              "type": "string",
              "minLength": 1
            },
            "sources": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "object",
                "required": ["srcset", "type"],
                "additionalProperties": false,
                "properties": {
                  "srcset": {
                    "type": "string",
                    "minLength": 1
                  },
                  "type": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        },
        "mediaType": {
          "type": "string",
          "minLength": 1
        },
        "transcript": {
          "type": "string",
          "minLength": 1
        },
        "audioUrl": {
          "type": ["string", "null"],
          "pattern": "^https://"
        },
        "referenceLinks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "url"],
            "additionalProperties": false,
            "properties": {
              "label": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "pattern": "^https://"
              }
            }
          }
        }
      }
    },
    "navigation": {
      "type": "object",
      "required": ["breadcrumbs", "returnToExhibition"],
      "additionalProperties": false,
      "properties": {
        "breadcrumbs": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": ["label", "url"],
            "additionalProperties": false,
            "properties": {
              "label": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "pattern": "^/"
              }
            }
          }
        },
        "returnToExhibition": {
          "type": "string",
          "pattern": "^/exhibitions/[a-z0-9-]+/$"
        }
      }
    },
    "adjacent": {
      "type": "object",
      "required": ["previous", "next"],
      "additionalProperties": false,
      "properties": {
        "previous": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "label": {
              "type": "string",
              "minLength": 1
            },
            "url": {
              "type": "string",
              "pattern": "^/"
            }
          },
          "required": ["label", "url"]
        },
        "next": {
          "type": ["object", "null"],
          "additionalProperties": false,
          "properties": {
            "label": {
              "type": "string",
              "minLength": 1
            },
            "url": {
              "type": "string",
              "pattern": "^/"
            }
          },
          "required": ["label", "url"]
        }
      }
    }
  }
}
