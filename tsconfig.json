{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest"],
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "noEmit": false,
    "declaration": false,
    "sourceMap": true,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*.ts", "eleventy.config.ts"],
  "exclude": ["dist", "node_modules", "tests"]
}
