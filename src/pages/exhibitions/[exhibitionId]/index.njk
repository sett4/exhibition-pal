---
pagination:
  data: exhibitionsData.exhibitions
  size: 1
  alias: exhibition
permalink: "/exhibitions/{{ exhibition.id }}/"
---
{% extends "layouts/exhibition-detail.njk" %}
{% set sectionsById = exhibitionsData.sectionsById or {} %}
{% set sections = sectionsById[exhibition.id] or [] %}
{% if sections | length == 0 %}
  {% set sections = [
    {
      "slug": "overview",
      "title": "展示情報",
      "body": "この展示の詳細は準備中です。公式サイトで最新情報をご確認ください。",
      "items": []
    }
  ] %}
{% endif %}
{% if exhibition.heroImageUrl %}
  {% set heroMedia = {
    "variant": "image",
    "src": exhibition.heroImageUrl,
    "alt": exhibition.title
  } %}
{% else %}
  {% set heroMedia = {
    "variant": "placeholder",
    "label": exhibition.title | slice(0, 2),
    "backgroundClass": "hero-gradient"
  } %}
{% endif %}
