---
title: Exhibitions
---
{% extends "layouts/exhibitions.njk" %}
{% from "components/exhibitions-hero.njk" import exhibitionsHero %}
{% from "components/exhibition-card.njk" import exhibitionCard %}
{% set exhibitions = exhibitionsData.exhibitions or [] %}
{% set heroExhibition = exhibitions[0] if exhibitions | length > 0 else null %}
{% set heroMedia = {} %}
{% if heroExhibition %}
  {% if heroExhibition.heroImageUrl %}
    {% set heroMedia = {
      "variant": "image",
      "src": heroExhibition.heroImageUrl,
      "alt": heroExhibition.title
    } %}
  {% else %}
    {% set heroMedia = {
      "variant": "placeholder",
      "label": heroExhibition.title | slice(0, 2),
      "backgroundClass": "hero-gradient"
    } %}
  {% endif %}
{% endif %}

{% block hero %}
  {% if heroExhibition %}
    {{ exhibitionsHero(heroExhibition, heroMedia, "今週の注目展示", heroExhibition.summary, "index") }}
  {% endif %}
{% endblock %}

{% block content %}
  {% if exhibitions | length %}
    <section class="flex flex-col gap-10">
      <header class="flex flex-col gap-3">
        <p class="text-sm uppercase tracking-[0.4em] text-brand-dark">Exhibitions Calendar</p>
        <h2 class="text-3xl font-semibold text-neutral-900 md:text-4xl">開催中・開催予定の展示会</h2>
      </header>
      <div
        class="grid gap-8 md:grid-cols-2 md:gap-10 xl:grid-cols-3 xl:gap-12"
        data-testid="exhibitions-grid"
      >
        {% for exhibition in exhibitions %}
          {{ exhibitionCard(exhibition) }}
        {% endfor %}
      </div>
    </section>
  {% else %}
    <section class="rounded-3xl bg-white p-12 text-center shadow-card">
      <p class="text-lg text-neutral-600">現在表示できる展示会はありません。</p>
    </section>
  {% endif %}
{% endblock %}
