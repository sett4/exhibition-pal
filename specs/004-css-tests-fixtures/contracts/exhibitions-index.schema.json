{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://exhibition-pal/specs/004-css-tests-fixtures/exhibitions-index.schema.json",
  "title": "Exhibitions index page payload",
  "type": "object",
  "required": [
    "list",
    "meta"
  ],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "pageTitle",
        "description",
        "updatedAt"
      ],
      "additionalProperties": false,
      "properties": {
        "pageTitle": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "list": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "slug",
          "title",
          "period",
          "venue",
          "summary",
          "heroImage",
          "featuredArtworkIds",
          "detailUrl"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "slug": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "venue": {
            "type": "string",
            "minLength": 1
          },
          "period": {
            "type": "object",
            "required": [
              "display"
            ],
            "properties": {
              "start": {
                "type": [
                  "string",
                  "null"
                ],
                "format": "date"
              },
              "end": {
                "type": [
                  "string",
                  "null"
                ],
                "format": "date"
              },
              "display": {
                "type": [
                  "string",
                  "null"
                ]
              }
            },
            "additionalProperties": false
          },
          "heroImage": {
            "type": "object",
            "required": [
              "src",
              "alt",
              "focalPoint"
            ],
            "properties": {
              "src": {
                "type": "string",
                "format": "uri"
              },
              "alt": {
                "type": "string",
                "minLength": 1
              },
              "focalPoint": {
                "type": "object",
                "required": [
                  "x",
                  "y"
                ],
                "properties": {
                  "x": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "y": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "featuredArtworkIds": {
            "type": "array",
            "minItems": 3,
            "maxItems": 6,
            "items": {
              "type": "string"
            }
          },
          "detailUrl": {
            "type": "string",
            "pattern": "^/exhibitions/[a-z0-9-]+/$"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          }
        }
      }
    }
  }
}
