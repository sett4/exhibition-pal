{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://exhibition-pal.specs/001-csv-api-react/exhibit.schema.json",
  "title": "Exhibit",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "exhibit_id",
    "title_ja",
    "title_en",
    "summary_ja",
    "summary_en",
    "category",
    "hero_image",
    "hero_alt_ja",
    "hero_alt_en",
    "tags",
    "published_at",
    "curator_ids",
    "related_event_ids",
    "updated_at"
  ],
  "properties": {
    "exhibit_id": {
      "type": "string",
      "pattern": "^[a-z0-9\\-]+$"
    },
    "title_ja": {
      "type": "string",
      "minLength": 1
    },
    "title_en": {
      "type": "string",
      "minLength": 1
    },
    "summary_ja": {
      "type": "string",
      "minLength": 1
    },
    "summary_en": {
      "type": "string",
      "minLength": 1
    },
    "category": {
      "type": "string",
      "enum": ["permanent", "special", "archive"]
    },
    "hero_image": {
      "type": "string",
      "pattern": "^assets\\/images\\/.+\\.(jpg|jpeg|png|webp)$"
    },
    "hero_alt_ja": {
      "type": "string",
      "minLength": 5
    },
    "hero_alt_en": {
      "type": "string",
      "minLength": 5
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9\\-]+$"
      },
      "uniqueItems": true
    },
    "published_at": {
      "type": "string",
      "format": "date"
    },
    "curator_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^curator_[0-9]{3}$"
      },
      "uniqueItems": true
    },
    "related_event_ids": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^event_[0-9a-f]{8}$"
      },
      "uniqueItems": true
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "is_archived": {
      "type": "boolean",
      "default": false
    }
  }
}
